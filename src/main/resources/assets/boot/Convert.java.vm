package ${basePackage}.convert;

import ${domainPackage}.${domainName};
import ${basePackage}.${objPathName}.dto.${domainName}Dto;
import ${basePackage}.${objPathName}.vo.${domainName}Vo;
import org.springframework.beans.BeanUtils;

public class ${domainName}Convert {

    /**
     * VO转实体类
     *
     * @param ${objName}Vo 参数
     * @return ${domainPackage}.${domainName} 返回类型
     * @author ${author}
     * @createdAt ${createDate}
     */
    public static ${domainName} domainToDto(${domainName}Vo ${objName}Vo) {
        if (${objName}Vo == null) {
            return null;
        }
        ${domainName} ${objName} = new ${domainName}();
        BeanUtils.copyProperties(${objName}Vo, ${objName});
        return ${objName};
    }

    /**
     * 实体类转DTO
     *
     * @param ${objName}Dto 参数
     * @return ${basePackage}.${objName}.dto.${domainName}Dto 返回类型
     * @author ${author}
     * @createdAt ${createDate}
     */
    public static ${domainName}Dto domainToDto(${domainName} ${objName}Dto) {
        if (${objName}Dto == null) {
            return null;
        }
        ${domainName}Dto dto = new ${domainName}Dto();
        BeanUtils.copyProperties(${objName}Dto, dto);
        return dto;
    }
}
